{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/src/"
            ],
            "compilerPath": "/usr/local/bin/clang",
            "cStandard": "c11",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-std=c11",
                "-I ./src",
                "-lrt"
            ],
            "defines": [
                "_POSIX_C_SOURCE=199309L"
            ]
            
        }
    ],
    
    "version": 4
}